<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:annotation-config/>

    <bean id="userDao" class="com.h2rd.refactoring.dao.impl.UserDaoImpl" />
    <bean id="userService" class="com.h2rd.refactoring.service.UserService"/>
    <bean id="userController" class="com.h2rd.refactoring.controller.UserController"/>
</beans>
